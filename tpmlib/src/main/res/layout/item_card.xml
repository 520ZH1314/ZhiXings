<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_matche_default"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_matche_default" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="165dp"
            android:src="@mipmap/ic_matche_add" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:text="0"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:id="@+id/ll_line"
            android:layout_marginLeft="@dimen/x8"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/x15"
            android:background="@color/title_bg"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:text="点检标准"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/ll_line"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:textSize="@dimen/s12"
        android:textColor="@color/text_color"
        android:id="@+id/tv_check_item"
        android:text="保持锁磨射台机构油泵等活动部件有润滑油脂无渣"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_centerVertical="true"
            android:id="@+id/ll_lines"
            android:layout_marginLeft="@dimen/x8"
            android:layout_width="@dimen/x5"
            android:layout_height="@dimen/x15"
            android:background="@color/title_bg"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:text="点检结果"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/ll_lines"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <EditText
            style="@style/MyEditText"
            android:gravity="center"
            android:textColor="@color/gray02"
            android:layout_marginTop="5dp"
            android:id="@+id/et_hint_result"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:hint="请输入点检结果"
            android:textSize="@dimen/s12"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textSize="16sp"
            android:textColor="#FF943D"
            android:background="@drawable/btn_check_red"
            android:layout_toLeftOf="@id/btn_ok"
            android:id="@+id/btn_ng"
            android:text="NG"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="40dp" />
        <Button
            android:textSize="16sp"
            android:textColor="#15BC84"
            android:gravity="center"
            android:background="@drawable/btn_check_green"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginLeft="@dimen/x30"
            android:id="@+id/btn_ok"
            android:layout_alignParentRight="true"
            android:text="OK"
            android:layout_width="100dp"
            android:layout_height="40dp" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>