<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/item_cardview"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_date"
            android:padding="@dimen/x10"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_centerVertical="true"
                    android:id="@+id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="@dimen/x5"
                    android:layout_height="@dimen/x15"
                    android:layout_marginTop="8dp"
                    android:background="@color/title_bg" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="36"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/content_txt_" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_check_date"
                android:layout_marginLeft="@dimen/x30"
                android:text="-92"
                android:gravity="center"
                android:textColor="#F04630"
                android:textSize="@dimen/title_center_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="@dimen/x30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="倒计时"
                android:textColor="#9b9b9b"
                android:textSize="@dimen/list_txt_" />
            <TextView
                android:padding="@dimen/x3"
                android:id="@+id/tv_check_detail"
                android:layout_marginTop="@dimen/x9"
                android:layout_marginLeft="@dimen/x30"
                android:gravity="center"
                android:text="查看明细"
                android:background="@drawable/btn_blue_strore"
                android:textSize="@dimen/list_txt_"
                android:textColor="@color/moren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <View
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:layout_gravity="center"
                android:background="@color/gray02"
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
            android:layout_marginTop="@dimen/x3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="设备编号"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/content_txt_" />
            <TextView
                android:id="@+id/tv_matche_num"
                android:layout_marginLeft="@dimen/x3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="ZSJ001"
                android:textColor="@color/black"
                android:textSize="@dimen/list_txt_" />
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="设备名称"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/content_txt_" />
            <TextView
                android:id="@+id/tv_matche_name"
                android:layout_marginLeft="@dimen/x3"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="塑胶注塑机"
                android:textColor="@color/black"
                android:textSize="@dimen/list_txt_" />
        </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/x3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="保养人"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/content_txt_" />
                </LinearLayout>
                <TextView
                   android:id="@+id/tv_panned_name"
                    android:layout_marginLeft="@dimen/x3"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="哆啦A梦"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_txt_" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="上次保养时间"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/content_txt_" />
                <TextView
                    android:id="@+id/tv_matche_date"
                    android:layout_marginLeft="@dimen/x3"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="周保养"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_txt_" />
            </LinearLayout>
        </LinearLayout>
        <com.zhixing.tpmlib.view.LabelView
            android:id="@+id/tv_rotate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            app:backgroundColor="#FF943D"
            app:corner="rightTop"
            app:labelBottomPadding="@dimen/x10"
            app:labelCenterPadding="@dimen/x10"
            app:labelTopPadding="@dimen/x5"
            app:primaryText="待审批"
            app:primaryTextColor="@color/white"
            app:primaryTextSize="@dimen/content_txt_s"
            app:secondaryText="  " />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
