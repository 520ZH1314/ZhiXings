<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.RecruitRecordActivity">

    <include layout="@layout/titles_layout"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_recuit_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="8dp"
        app:tabIndicatorColor="@color/title_bg"
        app:tabSelectedTextColor="@color/title_bg"
        app:tabTextColor="@color/black">

    </android.support.design.widget.TabLayout>

   <android.support.v4.view.ViewPager
       android:id="@+id/vp_recuit_record"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </android.support.v4.view.ViewPager>
</LinearLayout>