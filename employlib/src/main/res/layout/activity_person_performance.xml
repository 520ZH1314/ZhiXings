<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:id="@+id/ll_performance"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    tools:context=".ui.activity.PerformanceActivity"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/rl_performance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <com.zhixing.employlib.view.ShimmerTextView
                android:id="@+id/tv_ani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="iLean"
                android:textColor="@color/gray02"
                app:reflectionColor="@color/title_bg"
                android:textSize="70sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_performance1"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:visibility="gone">

            <com.zhixing.employlib.view.CustomScrollViewPager
                android:id="@+id/viewpager_persion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </RelativeLayout>
    </RelativeLayout>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>



