<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_excellent_employee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x200"
                android:scaleType="centerCrop"
                android:src="@drawable/excelicent_employee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/moth_employee" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:background="@drawable/image_gradient"
                app:layout_constraintBottom_toBottomOf="@+id/iv_excellent_employee"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:src="@mipmap/glob"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_item_excellent_employee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="张三"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_txt_"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_rank"
                    app:layout_constraintStart_toEndOf="@+id/iv_rank"
                    app:layout_constraintTop_toTopOf="@+id/iv_rank" />

                <TextView
                    android:id="@+id/tv_item_excellent_employee_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="包装工人"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_txt_"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_rank"
                    app:layout_constraintStart_toEndOf="@+id/view9"
                    app:layout_constraintTop_toTopOf="@+id/iv_rank" />

                <TextView
                    android:id="@+id/tv_item_excellent_employee_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="180分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_txt_"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_rank"
                    app:layout_constraintEnd_toStartOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="@+id/iv_rank" />

                <TextView
                    android:id="@+id/tv_item_excellent_employee_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="第一名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/list_txt_"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_rank"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/iv_rank"
                    app:layout_constraintVertical_bias="0.666" />

                <View
                    android:id="@+id/view9"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/x20"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_item_excellent_employee_name"
                    app:layout_constraintStart_toEndOf="@+id/tv_item_excellent_employee_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_item_excellent_employee_name" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/ring_employee"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_rank"
                    app:layout_constraintEnd_toStartOf="@+id/tv_item_excellent_employee_num"
                    app:layout_constraintTop_toTopOf="@+id/iv_rank" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/rank_employee"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_item_excellent_employee_rank"
                    app:layout_constraintEnd_toStartOf="@+id/tv_item_excellent_employee_rank"
                    app:layout_constraintTop_toTopOf="@+id/tv_item_excellent_employee_rank" />

            </android.support.constraint.ConstraintLayout>


            <TextView

                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="上榜理由"
                android:textColor="@color/black"
                android:textSize="@dimen/title_center_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_excellent_employee" />

            <TextView

                android:id="@+id/tv_item_excellent_employee_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="123"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView43"
                app:layout_constraintTop_toBottomOf="@+id/textView43" />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>