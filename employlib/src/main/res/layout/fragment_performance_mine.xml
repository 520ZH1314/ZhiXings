<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:background="@color/title_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_appeal_mine_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="我的履历"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt_"
            app:layout_constraintEnd_toEndOf="@+id/imageView26"
            app:layout_constraintStart_toStartOf="@+id/imageView26"
            app:layout_constraintTop_toBottomOf="@+id/imageView26" />

        <ImageView
            android:id="@+id/iv_appeal_mine_bg"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            android:src="@drawable/excelicent_employee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_appeal_mine_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:civ_border_width="@dimen/x3"
            android:src="@drawable/excelicent_employee"

            app:civ_border_color="@color/white"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_appeal_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="张三"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt_"
            app:layout_constraintEnd_toEndOf="@+id/iv_appeal_mine_head"
            app:layout_constraintStart_toStartOf="@+id/iv_appeal_mine_head"
            app:layout_constraintTop_toBottomOf="@+id/iv_appeal_mine_head" />

        <TextView
            android:id="@+id/tv_appeal_mine_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="我的绩效"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt_"
            app:layout_constraintEnd_toEndOf="@+id/imageView27"
            app:layout_constraintStart_toStartOf="@+id/imageView27"
            app:layout_constraintTop_toBottomOf="@+id/imageView27" />

        <TextView
            android:id="@+id/tv_appeal_mine_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="包装工人"
            android:textColor="@color/white"
            android:textSize="@dimen/content_txt_"
            app:layout_constraintEnd_toEndOf="@+id/iv_appeal_mine_head"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="@+id/iv_appeal_mine_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_appeal_mine_name" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:src="@mipmap/icon_wodejixiao"
            app:layout_constraintEnd_toStartOf="@+id/tv_appeal_mine_job"
            app:layout_constraintTop_toBottomOf="@+id/tv_appeal_mine_job" />

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:src="@mipmap/icon_wodelvli"
            app:layout_constraintBottom_toBottomOf="@+id/imageView27"
            app:layout_constraintStart_toEndOf="@+id/tv_appeal_mine_job"
            app:layout_constraintTop_toTopOf="@+id/imageView27" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>