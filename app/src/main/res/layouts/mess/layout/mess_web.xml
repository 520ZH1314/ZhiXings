<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/title_bg"
            android:layout_height="@dimen/title_height">
            <ImageView
                android:id="@+id/tetle_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:visibility="invisible"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/back"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/title_center_size"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
               android:paddingLeft="@dimen/x7"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/x7"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/shape_mess_xiao"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/share"
                    android:layout_width="@dimen/x20"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_height="@dimen/x20"
                    android:src="@mipmap/share"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x5"
                    android:background="@color/content_line"/>
                <ImageView
                    android:id="@+id/close"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:src="@mipmap/xiaochengxu"/>
            </LinearLayout>
        </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/common_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:id="@+id/process_bar"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            style="?android:attr/progressBarStyleHorizontal"/>

    </FrameLayout>
    </LinearLayout>
</LinearLayout>