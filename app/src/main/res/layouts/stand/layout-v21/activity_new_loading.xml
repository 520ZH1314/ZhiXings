<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/app_login_cl"

        android:background="#287DFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.base.zhixing.www.widget.CircularImage
            android:id="@+id/iv_login"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x45"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/login_demo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView81"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="欢迎你,"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/iv_login"
            app:layout_constraintTop_toBottomOf="@+id/iv_login" />

        <TextView
            android:id="@+id/textView83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="登录iLean智慧精益制造管理系统"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/iv_login"
            app:layout_constraintTop_toBottomOf="@+id/textView81" />


    </android.support.constraint.ConstraintLayout>

    <com.shuben.zhixing.www.view.LCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

       android:layout_below="@+id/app_login_cl"
        android:layout_marginTop="-20dp"


        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:leftTopCornerRadius="10dp"
        app:rightTopCornerRadius="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView84"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="登录账号"
                android:textColor="@color/black"
                android:textSize="@dimen/title_center_size"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_login_ip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入企业号"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView84"
                app:layout_constraintTop_toBottomOf="@+id/textView84" />

            <View
                android:id="@+id/view20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/content_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_ip" />

            <View
                android:id="@+id/view21"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/content_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_ip2" />

            <View
                android:id="@+id/view22"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@color/content_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_login_ip3" />

            <EditText
                android:id="@+id/et_login_ip2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入手机号/工号"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="@+id/textView84"
                app:layout_constraintTop_toBottomOf="@+id/view20" />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_login_ip3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入密码"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.666"
                app:layout_constraintStart_toStartOf="@+id/textView84"
                app:layout_constraintTop_toBottomOf="@+id/et_login_ip2" />

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="24dp"
                android:text="忘记密码?"
                android:textColor="#287DFA"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/et_login_ip3"
                app:layout_constraintStart_toStartOf="@+id/et_login_ip3"
                app:layout_constraintTop_toBottomOf="@+id/view22" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="#287DFA"
                android:gravity="center"
                android:paddingTop="@dimen/x16"
                android:paddingBottom="@dimen/x16"
                android:text="登录"

                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_forget_pwd" />

            <TextView
                android:textColor="@color/gray02"
                android:textSize="12sp"
                android:id="@+id/tv_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                android:text="Copyright \u00a9 2012-2019 STD. All right reserved️"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_copyright_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"

                android:text="深圳市数本科技开发有限公司版权所有"
                android:textColor="@color/gray02"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_copyright"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_login_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/btn_login"
                app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        </android.support.constraint.ConstraintLayout>

    </com.shuben.zhixing.www.view.LCardView>







</RelativeLayout>