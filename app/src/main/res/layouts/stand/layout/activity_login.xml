<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="200">
        <TextView
            android:layout_width="wrap_content"
            android:text="智慧精益制造管理系统"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/txt_viw"
            android:textSize="@dimen/s28"
            android:layout_marginTop="@dimen/x20"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_head"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/x97"
            android:layout_margin="@dimen/x15"
            android:src="@drawable/std"
            android:layout_height="@dimen/x38"
              />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/x15"
        android:gravity="center"
        android:layout_weight="230">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.base.zhixing.www.widget.XEditText
                android:id="@+id/edit0"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/scan_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/no_color"
                android:padding="@dimen/x8"
                android:textSize="@dimen/s20"
                android:hint="企业号"
                android:singleLine="true"
                app:x_disableEmoji="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:textColorHint="@color/txt_bor"
                android:textColor="@color/txt_viw"
                app:x_clearDrawable="@mipmap/ic_clear"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/login_ico0"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x10"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.base.zhixing.www.widget.XEditText
                android:id="@+id/login_phone_et"
                android:padding="@dimen/x8"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/scan_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/no_color"
                android:textSize="@dimen/s20"
                android:hint="手机号/工号"
                android:singleLine="true"
                app:x_disableEmoji="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:textColorHint="@color/txt_bor"
                android:textColor="@color/txt_viw"

                app:x_clearDrawable="@mipmap/ic_clear"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/login_ico1"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x10"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.base.zhixing.www.widget.XEditText
                android:id="@+id/login_pwd_et"
                android:gravity="center_vertical"
                android:padding="@dimen/x8"
                android:layout_toLeftOf="@+id/scan_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/no_color"
                android:textSize="@dimen/s20"
                android:hint="密码"
                android:password="true"
                android:singleLine="true"
                app:x_disableEmoji="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:textColorHint="@color/txt_bor"
                android:textColor="@color/txt_viw"

                app:x_clearDrawable="@mipmap/ic_clear"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/login_ico2"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x10"
            android:background="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:padding="@dimen/x15"
        android:layout_weight="118">
        <TextView
            android:id="@+id/login_login"
            android:layout_width="match_parent"
            android:text="登录"
            android:textColor="@color/white"
            android:padding="@dimen/x10"
            android:textSize="@dimen/s20"
            android:gravity="center"
            android:background="@drawable/shape_login_bg"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/x10"
        android:orientation="vertical"
        android:layout_weight="200">
        <LinearLayout
            android:id="@+id/bom_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/x10"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="@color/content_line"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="第三方登录"
                android:textColor="@color/txt_bor"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="@color/content_line"/>
            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x20"
            android:text="&#064;2019数本科技"
            android:textColor="@color/txt_bor"
            android:textSize="@dimen/p_txt_12"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"/>
        <ImageView
            android:layout_width="@dimen/x40"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bom_layout"
            android:src="@mipmap/login_wechat"
            android:layout_marginTop="@dimen/x15"
            android:layout_height="@dimen/x40" />
            <TextView
                android:id="@+id/tx_Ver"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x10"
                android:textSize="@dimen/p_txt_10"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>