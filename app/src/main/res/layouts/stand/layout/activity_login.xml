<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout"
        android:visibility="invisible"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x50"
            android:background="@mipmap/login_head"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="@dimen/x40"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
            <RelativeLayout
                android:id="@+id/login_layout02"
                android:layout_width="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="@dimen/x45">
                <ImageView
                    android:id="@+id/login_img"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/user" />
                <ImageView
                    android:id="@+id/login_clear"
                    android:layout_width="@dimen/x17"
                    android:layout_height="@dimen/x17"
                    android:background="@mipmap/clear01"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <AutoCompleteTextView
                    android:id="@+id/login_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/login_img"
                    android:layout_toLeftOf="@+id/login_clear"
                    android:background="@null"
                    android:textSize="@dimen/s13"
                    android:maxLength="11"
                    android:textColor="@color/text_g"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:completionThreshold="1"
                    android:hint="请输入手机号码" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray03"></View>

            <RelativeLayout
                android:id="@+id/login_layout03"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_marginTop="3dp" >

                <ImageView
                    android:id="@+id/login_pwd"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/password" />
                <ImageView
                    android:id="@+id/psw_clear"
                    android:layout_width="@dimen/x17"
                    android:layout_height="@dimen/x17"
                    android:background="@mipmap/clear01"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>

                <EditText
                    android:id="@+id/login_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/s13"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/text_g"
                    android:layout_toRightOf="@+id/login_pwd"
                    android:layout_toLeftOf="@+id/p_clear"
                    android:layout_toEndOf="@+id/login_pwd" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray03"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:visibility="gone"
                android:layout_marginTop="3dp" >

                <ImageView
                    android:id="@+id/login_http"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@mipmap/pwd" />
                <ImageView
                    android:id="@+id/http_clear"
                    android:layout_width="@dimen/x17"
                    android:layout_height="@dimen/x17"
                    android:background="@mipmap/clear01"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:id="@+id/http_pwd_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/login_http"
                    android:layout_toLeftOf="@+id/http_clear"
                    android:background="@null"
                    android:textSize="@dimen/s13"
                    android:textColor="@color/text_g"
                    android:inputType="textPassword"
                    android:hint="请输入IP地址" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:layout_marginTop="30dp" >

            <TextView
                android:id="@+id/login_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_next_step"
                android:text="登录"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/s13" />
        </RelativeLayout>




        <RelativeLayout
        android:id="@+id/login_layout04"
        android:layout_width="match_parent"

        android:layout_height="35dp" >
        <TextView
            android:id="@+id/tx_fwq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="服务器"
            android:layout_marginLeft="20dp"
            android:textColor="@color/txt_viw"
            android:textSize="@dimen/s14" />


        <TextView
            android:id="@+id/login_forgetpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text=" 忘记密码"
            android:textColor="@color/txt_viw"
            android:textSize="@dimen/s14" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_layout05"
            android:layout_width="match_parent"
            android:layout_height="35dp" >
            <TextView
                android:id="@+id/tx_Ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_viw"
                android:layout_marginRight="20dp"
                android:text=" 版本号：V1.1"
                android:textSize="@dimen/s10" />
        </RelativeLayout>

    </LinearLayout>
    <com.shuben.zhixing.www.widget.wave.MultiWaveHeader
        android:id="@+id/waveHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleY="-1"
        app:mwhVelocity="1"
        app:mwhProgress="1"
        app:mwhGradientAngle="45"
        app:mwhWaveHeight="50dp"
        app:mwhColorAlpha="0.45"
        app:mwhStartColor="@color/__camera_material_blue"
        app:mwhCloseColor="@color/__camera_material_blue"
        app:mwhWaves="MultiWave"/>
</LinearLayout>
