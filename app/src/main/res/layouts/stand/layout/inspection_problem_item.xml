<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/x8"
        android:background="@drawable/shape_white_or"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="问题单号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/list_txt_"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name01" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name01"
            android:layout_toEndOf="@+id/tx_name01"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item01" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/list_txt_"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item02" />

        <TextView
            android:text="状态:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item02"
            android:layout_toStartOf="@+id/tx_item02"
            android:layout_centerVertical="true"
            android:textSize="@dimen/list_txt_"
            android:textStyle="bold"
            android:id="@+id/tx_name" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="产品:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/list_txt_"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_pname" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_pname"
            android:layout_toEndOf="@+id/tx_pname"
            android:layout_centerVertical="true"
            android:textSize="@dimen/list_txt_"
            android:id="@+id/tx_item08" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name03"
            android:layout_toEndOf="@+id/tx_name03"
            android:layout_centerVertical="true"
            android:textSize="@dimen/list_txt_s"
            android:id="@+id/tx_item03" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/list_txt_s"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item04" />

        <TextView
            android:text="责任人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item04"
            android:layout_toStartOf="@+id/tx_item04"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name04" />

        <TextView
            android:text="责任部门:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:id="@+id/tx_name03"
            android:layout_alignBaseline="@+id/tx_item03"
            android:layout_alignBottom="@+id/tx_item03"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="要求完成时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name05" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name05"
            android:layout_toEndOf="@+id/tx_name05"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item05" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name06"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item06" />

        <TextView
            android:text="实际完成时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name06" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:visibility="gone"
        >

        <TextView
            android:text="问题描述:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/list_txt_"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name07" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tx_name07"
            android:layout_toEndOf="@+id/tx_name07"
            android:layout_centerVertical="true"
            android:textSize="@dimen/list_txt_"
            android:background="#EEEEEE"
            android:gravity="center"
            android:id="@+id/tx_item07" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="进入处理"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x30"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x8"
            android:gravity="center"
            android:textSize="@dimen/content_txt_s"
            android:layout_marginEnd="9dp"
            android:textColor="@color/white"
            android:background="@drawable/btn1_style"
            android:id="@+id/bnt_commit" />
    </RelativeLayout>

    </LinearLayout>

</LinearLayout>
