<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">
    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout" />

    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout_time" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/l_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/activity_dataanalysis_org_title"
                />

            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"

            android:background="@color/white"
            >
            <include
                android:id="@+id/l_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                layout="@layout/activity_dataanalysis_img01" />


            <include
                android:id="@+id/l_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                layout="@layout/activity_dataanalysis_img02" />
        </LinearLayout>
        <!--任务关闭统计-->
        <LinearLayout
            android:id="@+id/llayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/white"
            >
            <include
                android:id="@+id/l_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                layout="@layout/activity_dataanalysis_img03" />


            <include
                android:id="@+id/l_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x180"
                layout="@layout/activity_dataanalysis_img04" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/white"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/activity_dataanalysis_2" />
        </LinearLayout>
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
