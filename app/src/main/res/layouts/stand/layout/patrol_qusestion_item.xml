<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="问题单号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name01" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name01"
            android:layout_toEndOf="@+id/tx_name01"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item01" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item02" />

        <TextView
            android:text="状态:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item02"
            android:layout_toStartOf="@+id/tx_item02"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="巡线车间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name03" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name03"
            android:layout_toEndOf="@+id/tx_name03"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item03" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item04" />

        <TextView
            android:text="巡线类别:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item04"
            android:layout_toStartOf="@+id/tx_item04"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name04" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="问题发现人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name05" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name05"
            android:layout_toEndOf="@+id/tx_name05"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item05" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item06" />

        <TextView
            android:text="要求完成时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item06"
            android:layout_toStartOf="@+id/tx_item06"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name06" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView86"
            android:layout_toEndOf="@+id/textView86"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:isIndicator="true"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:id="@+id/tx_item07" />

        <TextView
            android:text="问题严重程度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/textView86"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <Button
            android:text="进入处理"
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginEnd="9dp"
            android:textColor="@color/white"
            android:background="@drawable/btn1_style"
            android:id="@+id/bnt_commit" />
    </RelativeLayout>
</LinearLayout>
