<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perform"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shuben.zhixing.www.patrol.analysis.PerformActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#169BD5"
        >

        <TextView
            android:text="本月巡线执行"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/s14"
            android:id="@+id/tx_tittle" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_back"
            android:layout_alignBaseline="@+id/tx_tittle"
            android:layout_alignBottom="@+id/tx_tittle"
            android:layout_toRightOf="@+id/title_back"
            android:layout_toEndOf="@+id/title_back" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"

        >

        <TextView
            android:text="参与率:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name01"
            android:textSize="@dimen/s12"
            android:layout_marginLeft="@dimen/x10"
            android:textStyle="bold"
            />

        <TextView
            android:text="50%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:id="@+id/tx_item01"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"

        >

        <TextView
            android:text="请假人数"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name02"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            />

        <TextView
            android:text="缺席人数"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name03"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            />

        <TextView
            android:text="早退人数"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name04"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"

        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:id="@+id/tx_item05" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:id="@+id/tx_item06" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:id="@+id/tx_item07" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"

        >

        <TextView
            android:text="巡线效率"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name08"
            android:textSize="@dimen/s12"
            android:layout_marginLeft="@dimen/x10"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="实际时长:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name09"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="60min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item09"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="计划时长:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name10"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="60min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item10"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="任务超时:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name11"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="60min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item11"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="实际区域:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name12"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item12"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="计划区域:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name13"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item13"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="达成率:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name14"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="100%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item14"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"

        >

        <TextView
            android:text="发现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tx_name15"
            android:textSize="@dimen/s12"
            android:layout_marginLeft="@dimen/x10"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="发现问题:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name16"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item16"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="发现亮点:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name17"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item17"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="人均问题发现:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name18"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item18"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="人均亮点发现:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name19"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item19"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="上次巡线发现问题:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name20"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item20"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
