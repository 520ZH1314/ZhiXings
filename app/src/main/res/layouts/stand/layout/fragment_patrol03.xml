<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@mipmap/xxjl_bg"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:id="@+id/lay_back">

            <TextView
                android:text="巡线管理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/s14"
                android:id="@+id/tx_tittle" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center"
            >

            <TextView
                android:text="问题记录:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/s14"
                android:gravity="center"
                android:id="@+id/textView10" />

            <TextView
                android:text="200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/s20"
                android:gravity="center"
                android:id="@+id/tx_item01"
                android:layout_alignTop="@+id/textView10"
                android:layout_toRightOf="@+id/textView10"
                android:layout_toEndOf="@+id/textView10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:text="进行中的问题"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:id="@+id/textView15" />

                <TextView
                    android:text="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:layout_marginTop="@dimen/x10"
                    android:id="@+id/tx_item02" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:text="未处理的问题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:id="@+id/textView17" />

                <TextView
                    android:text="150"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:layout_marginTop="@dimen/x10"
                    android:id="@+id/tx_item03" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <TextView
                    android:text="待审核问题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:id="@+id/textView19" />

                <TextView
                    android:text="70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s14"
                    android:layout_marginTop="@dimen/x10"
                    android:id="@+id/tx_item04" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/m_set_lay01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img01"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/xx_record"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/next_img01"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/fm_four_set01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:text="巡线记录"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img01"
            android:layout_toEndOf="@+id/img01" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray02"></View>
    <RelativeLayout
        android:id="@+id/m_set_lay02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/next_img02"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img02"
            android:layout_marginLeft="@dimen/x10"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:text="我的问题" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:background="@mipmap/my_problem"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray02"></View>
    <RelativeLayout
        android:id="@+id/m_set_lay03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/next_img03"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img03"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="我的审核" />

        <ImageView
            android:id="@+id/img03"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:background="@mipmap/my_sh"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray02"></View>
    <RelativeLayout
        android:id="@+id/m_set_lay04"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img04"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/lean_place"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x10"
            />

        <ImageView
            android:id="@+id/next_img04"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img04"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:text="学习园地" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray02"></View>

</LinearLayout>
