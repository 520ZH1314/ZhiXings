<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x75"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/re_cuidan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_cuidan"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x17"
                android:background="@mipmap/yysd_xlgl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效率管理类"
                android:textSize="@dimen/s10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@id/img_cuidan"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>

        <RelativeLayout
            android:id="@+id/re_jiaoban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_renwujiaoban"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x17"
                android:background="@mipmap/yygl_pzgl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品质管理类"
                android:textSize="@dimen/s10"
                android:layout_below="@+id/img_renwujiaoban"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:textColor="@color/black"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>
        <RelativeLayout
            android:id="@+id/re_gaoxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_gaoxiao"
                android:layout_width="@dimen/x23"
                android:layout_height="@dimen/x23"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x17"
                android:background="@mipmap/yygc_sbgl"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备管理类"
                android:textSize="@dimen/s10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@id/img_gaoxiao"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>
        <RelativeLayout
            android:id="@+id/re_baling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_guanli"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8D管理"
                android:textSize="@dimen/s10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:visibility="gone"
                android:layout_below="@id/img_guanli"/>

        </RelativeLayout>
    </LinearLayout>
    <!--第三行-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray03"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/re_ecn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            android:visibility="invisible"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_ecn"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x8"
                android:background="@mipmap/sy_ecn"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ECN管理"
                android:textSize="@dimen/s10"
                android:textColor="@color/black"
                android:layout_below="@+id/img_ecn"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView2" />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>

        <RelativeLayout
            android:id="@+id/re_mrb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_mrb"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x8"
                android:background="@mipmap/sy_mrp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MRB管理"
                android:textSize="@dimen/s10"
                android:layout_below="@+id/img_mrb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:textColor="@color/black"
                />

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>
        <RelativeLayout
            android:id="@+id/re_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_gengduo"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x8"
                android:background="@mipmap/sy_more"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="@dimen/s10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@id/img_gengduo"/>

        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray03"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_other"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x8"
                android:background="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多"
                android:textSize="@dimen/s10"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x4"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:layout_below="@id/img_other"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
