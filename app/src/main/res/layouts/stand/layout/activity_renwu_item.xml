<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/renwu_head"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:background="@mipmap/shubenlogo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/renwu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_toRightOf="@id/renwu_head"
                android:textSize="@dimen/s13"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/renwu_item_faqitime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:layout_toRightOf="@id/renwu_head"
                android:layout_below="@+id/renwu_item_name"
                android:textSize="@dimen/s10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray03"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25"
        android:background="@color/white">
        <TextView
            android:id="@+id/renwu_item_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textSize="@dimen/s11"
            android:maxLength="11"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:hint="---" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:maxLength="11"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:text="交货数量" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:background="@color/white">



            <TextView
                android:id="@+id/renwu_item_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="---" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="交货时间" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:background="@color/white">

            <TextView
                android:id="@+id/renwu_cargo_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="---" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:maxLength="11"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="类型"
                android:layout_marginLeft="10dp"
                android:id="@+id/textView3" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray03"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="说明" />

            <TextView
                android:id="@+id/renwu_cargo_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="请输入说明内容"
                android:maxLength="120"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@color/gray03"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/renwu_item_rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/jjcd_anser"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="回复"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s13"/>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray03"/>


            <RelativeLayout
                android:id="@+id/renwu_item_rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="更多..."
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s13"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
