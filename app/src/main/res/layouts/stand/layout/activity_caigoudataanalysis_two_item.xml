<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x29"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/analysis_item_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="--"/>


        <TextView
            android:id="@+id/analysis_item_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="--"/>

        <TextView
            android:id="@+id/analysis_item_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="--"/>

        <TextView
            android:id="@+id/analysis_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="--"/>


        <TextView
            android:id="@+id/analysis_item_faqiren"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red"
            android:visibility="gone"
            android:text="--"/>


        <TextView
            android:id="@+id/analysis_item_pingjia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/red"
            android:text="--"/>

        <TextView
            android:id="@+id/analysis_item_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="--"/>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray03"
            >
        </View>
</LinearLayout>
</LinearLayout>
