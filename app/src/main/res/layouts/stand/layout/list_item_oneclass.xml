<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        >

        <TextView
            android:text="巡线单号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#1695db"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_bh_name" />

        <TextView
            android:text="No00001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tx_bh_name"
            android:layout_toRightOf="@+id/tx_bh_name"
            android:layout_toEndOf="@+id/tx_bh_name"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_bh_value" />

        <TextView
            android:text="(分组任务)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_centerVertical="true"
            android:id="@+id/tx_task"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <TextView
            android:text="车间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_workspace_name" />

        <TextView
            android:text="前车间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_workspace_name"
            android:layout_toEndOf="@+id/tx_workspace_name"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_workspace_value" />

        <TextView
            android:text="超高温杀菌间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/s12"
            android:visibility="invisible"
            android:id="@+id/tx_area_value" />

        <TextView
            android:text="区域:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tx_area_value"
            android:layout_toStartOf="@+id/tx_area_value"
            android:layout_marginRight="@dimen/x5"
            android:textSize="@dimen/s12"
            android:visibility="invisible"
            android:id="@+id/tx_area_name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <TextView
            android:text="巡线倒计时:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_countdown_name" />

        <TextView
            android:text="10min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_countdown_name"
            android:layout_toEndOf="@+id/tx_countdown_name"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_countdown_value" />

        <TextView
            android:text="14:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_patroltime_value" />

        <TextView
            android:text="巡线时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tx_patroltime_value"
            android:layout_toStartOf="@+id/tx_patroltime_value"
            android:layout_marginRight="@dimen/x5"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_patroltime_name" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        >

        <TextView
            android:text="状态:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_status_name" />

        <TextView
            android:text="No00001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tx_status_name"
            android:layout_toRightOf="@+id/tx_status_name"
            android:layout_toEndOf="@+id/tx_status_name"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="#FF6600"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_status_value" />

        <TextView
            android:text="XX巡线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_class_value" />

        <TextView
            android:text="巡线类别:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tx_class_value"
            android:layout_toStartOf="@+id/tx_class_value"
            android:layout_marginRight="@dimen/x5"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_class_name" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#CCCCCC"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x5"
        android:paddingRight="@dimen/x10"
        >

        <Button
            android:text="启动巡线》"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x30"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@drawable/btn1_style"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/bnt_start" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#F0f0F0"
        >

    </RelativeLayout>

</LinearLayout>
