<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="2018-03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/s11"
            android:textColor="@color/black"
            android:id="@+id/tx_date" />

        <Button
            android:text=""
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:id="@+id/bnt_calendar"
            android:background="@drawable/calendar_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/gray"
        >

    </View>

    <RelativeLayout
        android:id="@+id/search_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@drawable/selector"
        >

        <ImageView
            android:id="@+id/next_img02"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img02"
            android:layout_marginLeft="@dimen/x10"
            android:background="@null"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:text="我的巡线报告" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:visibility="gone"
                >


                <TextView
                    android:text="本月我的称号"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="@dimen/s14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lay02"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@color/gray06"
                android:layout_height="273dp"
                android:visibility="gone"

                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/user02"
                        android:id="@+id/imageView4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">

                        <TextView
                            android:text="姓名:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_name03" />

                        <TextView
                            android:text="XXX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx_name03"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_item03" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">

                        <TextView
                            android:text="等级:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_name02" />

                        <TextView
                            android:text="3/50级"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx_name02"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_item09" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">

                        <TextView
                            android:text="称号:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_name3" />

                        <TextView
                            android:text="巡线小白"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx_name3"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_item3" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x40">

                        <TextView
                            android:text="巡线积分:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_name04" />

                        <TextView
                            android:text="300/5000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/s12"
                            android:textStyle="bold"
                            android:id="@+id/tx_item04"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tx_name04"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:text="巡线小白"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/dun01"
                        android:gravity="center"
                        android:textSize="@dimen/s12"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:id="@+id/textView23" />
                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                >
                <TextView
                    android:text="总体个人巡线报告"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tx_xx"
                    android:layout_marginLeft="@dimen/x10"
                    android:textSize="@dimen/s14"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/selector02"
                    android:layout_height="match_parent"
                    android:id="@+id/lay1">

                    <TextView
                        android:text="一级巡线"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/s12"
                        android:textStyle="bold"
                        android:id="@+id/tx_class01" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/selector02"
                    android:layout_height="match_parent"
                    android:id="@+id/lay2">

                    <TextView
                        android:text="二级巡线"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/s12"
                        android:textStyle="bold"
                        android:id="@+id/tx_class02" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/selector02"
                    android:layout_height="match_parent"
                    android:id="@+id/lay3">

                    <TextView
                        android:text="三级巡线"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="@dimen/s12"
                        android:textStyle="bold"
                        android:id="@+id/tx_class03" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/gray06"
                android:layout_height="wrap_content"
                >

                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
