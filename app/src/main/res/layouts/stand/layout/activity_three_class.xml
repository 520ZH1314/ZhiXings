<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_two_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shuben.zhixing.www.patrol.TwoClassActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:background="@mipmap/xxgl_bg"
        >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            >

            <TextView

                android:text="三级巡线"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="@dimen/s14"
                android:id="@+id/tx_tittle" />

            <Button
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:id="@+id/bnt_set"
                android:background="@mipmap/set"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:id="@+id/lay_back"
                android:orientation="horizontal"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x20"
                android:layout_alignTop="@+id/tx_tittle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginStart="@dimen/x10">

                <ImageView
                    android:id="@+id/title_back"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:background="@mipmap/back"
                    android:layout_gravity="center"
                     />

                <TextView
                    android:text="返回"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s12"
                    android:id="@+id/tx_back"
                     />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:gravity="center"
            >

            <TextView
                android:text="巡线倒计时"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s12"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:id="@+id/textView44" />

            <TextView
                android:text="60min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/s16"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/tx_custown" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="巡线开始时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="@dimen/x20"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:id="@+id/textView47" />

            <TextView
                android:text="2018-03-28 10:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView47"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/x20"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_patrolDate" />

            <TextView
                android:text="A01车间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_workShop"
                android:layout_below="@+id/textView49"
                android:layout_marginRight="@dimen/x10"
                android:layout_alignParentRight="true" />

            <TextView
                android:text="集合地点"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView49"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:textColor="@color/yellow"
                android:layout_marginRight="@dimen/x10"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/m_set_lay01"
        android:layout_width="match_parent"
        android:background="@drawable/selector"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img01"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/callpeople"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/next_img01"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img01"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="召集人员" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_set_lay02"
        android:layout_width="match_parent"
        android:background="@drawable/selector"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img02"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/faqi_xx"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/next_img02"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img02"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="任务定义" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_set_lay03"
        android:layout_width="match_parent"
        android:background="@drawable/selector"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img03"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/xx_task"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/next_img032"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img03"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="任务执行" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_set_lay04"
        android:layout_width="match_parent"
        android:background="@drawable/selector"
        android:layout_height="@dimen/x45">

        <ImageView
            android:id="@+id/img04"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_centerVertical="true"
            android:background="@mipmap/sj_tb"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:id="@+id/next_img04"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/next01"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/fm_four_set04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img04"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textSize="@dimen/s13"
            android:textColor="@color/text_g"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="巡线通报" />
    </RelativeLayout>


</LinearLayout>
