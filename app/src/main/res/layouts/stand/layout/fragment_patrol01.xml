<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/lay_back"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#169BD5"
        >

        <TextView
            android:text="巡线管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/s14"
            android:id="@+id/tx_tittle" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"
            android:layout_marginLeft="10dp"
            />

        <TextView

            android:text="首页"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_back"
            android:layout_alignBaseline="@+id/tx_tittle"
            android:layout_alignBottom="@+id/tx_tittle"
            android:layout_toRightOf="@+id/title_back"
            android:layout_toEndOf="@+id/title_back" />

        <TextView
            android:text="当前用户:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:textColor="@color/white"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_user" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

            <TextView
                        android:text="现场巡线"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s14"
                        android:layout_marginLeft="@dimen/x11"
                        android:id="@+id/p_tx01" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/x20"
                >

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        >
                        <GridView
                            android:id="@+id/grid"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fastScrollEnabled="false"
                            android:scrollbars="none"/>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            ></View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:text="巡线管理"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s14"
                android:layout_marginLeft="@dimen/x11"
                android:id="@+id/p_tx02" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt05"
                         />
                    <TextView
                        android:text="巡线记录"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text05" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt06"
                         />
                    <TextView
                        android:text="我的问题"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text06" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt07"
                         />
                    <TextView
                    android:text="我的审核"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/p_text07" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent"

                    >

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt08" />
                    <TextView
                        android:text="学习园地"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text08" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            ></View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:text="龙虎榜"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s14"
                android:layout_marginLeft="@dimen/x11"
                android:id="@+id/p_tx03" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt09"
                        />
                    <TextView
                        android:text="美丽工程"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text09" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt10"
                         />
                    <TextView
                        android:text="美丽现场"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text10" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt11"
                        android:background="@drawable/p_bnt01_selector"
                        android:src="@mipmap/patrol11" />
                    <TextView
                        android:text="人气榜"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text11" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray"
            ></View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:text="管理分析"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s14"
                android:layout_marginLeft="@dimen/x11"
                android:id="@+id/p_tx04" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt12"
                        />
                    <TextView
                        android:text="巡线总况"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text12" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt13"
                         />
                    <TextView
                        android:text="月度报告"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text13" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:id="@+id/p_bnt14"
                         />
                    <TextView
                        android:text="个人报告"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/p_text14" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
