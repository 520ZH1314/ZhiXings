<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x40">

        <com.shuben.zhixing.www.view.NiceSpinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x30"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/s10"
            android:id="@+id/nice_spinner01" />
        <com.shuben.zhixing.www.view.NiceSpinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x30"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:textSize="@dimen/s10"
            android:id="@+id/nice_spinner02" />


    </LinearLayout>

    <TextView
        android:text="日期区间"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:id="@+id/textView66" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/gray03"
            android:layout_marginLeft="@dimen/x10"
            android:layout_height="match_parent">

            <TextView
                android:text="2018-04-10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/s12"
                android:layout_marginLeft="@dimen/x5"
                android:id="@+id/tx_date01" />

            <Button
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:background="@drawable/calendar_selector"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x5"
                android:id="@+id/bnt_calendar01" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/gray03"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_height="match_parent">

            <Button
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:background="@drawable/calendar_selector"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x5"
                android:id="@+id/bnt_calendar02" />

            <TextView
                android:text="2018-04-15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_date02"
                android:layout_alignBaseline="@+id/bnt_calendar02"
                android:layout_alignBottom="@+id/bnt_calendar02"
                android:layout_marginLeft="@dimen/x5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/x40">

        <com.shuben.zhixing.www.view.NiceSpinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x25"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x10"
            android:visibility="gone"
            android:id="@+id/nice_spinner03" />
        <com.shuben.zhixing.www.view.NiceSpinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x25"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:visibility="gone"
            android:id="@+id/nice_spinner04" />


    </LinearLayout>

</LinearLayout>
