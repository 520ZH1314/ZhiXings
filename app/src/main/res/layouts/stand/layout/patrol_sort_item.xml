<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="第一名"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x30"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_item01"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/yellow"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="责任人:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name02"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item02"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="车间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name03"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="前处理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item03"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:gravity="center_vertical"
        android:background="@color/gray03"
        >


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="巡线评分:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name04"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="80分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item04"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="发现问题:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name05"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item05"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:text="发现亮点:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:id="@+id/tx_name06"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:text="80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/x1"
                android:id="@+id/tx_item06"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
