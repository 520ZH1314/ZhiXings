<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ss"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/x40">

            <TextView
                android:text="组别:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tx_name01"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_weight="1" />

            <TextView
                android:text="第一组"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_item01"
                android:textSize="@dimen/s12"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/x40">

            <TextView
                android:text="组长:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tx_name03"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_weight="1" />

            <TextView
                android:text="张三"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_item03"
                android:textSize="@dimen/s12"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/x40">

            <TextView
                android:text="车间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_name02"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_weight="1" />

            <TextView
                android:text="前车间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_item02"
                android:textSize="@dimen/s12"
                android:gravity="left"
                android:layout_weight="1" />
        </LinearLayout>
</LinearLayout>

    <ListView
        android:id="@+id/review_listview"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:dividerHeight="@dimen/x2"
        android:divider="@null"
        android:layout_height="match_parent" />

</LinearLayout>
