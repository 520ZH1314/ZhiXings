<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="@dimen/x40"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <TextView
                android:text="tx_item01"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:id="@+id/tx_item01"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:gravity="center"
                />

        </LinearLayout>


        <TextView
            android:text="tx_item02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item02"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/s12"
            android:layout_weight="1" />

        <TextView
            android:text="tx_item03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item03"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/s12"
            android:layout_weight="1" />

        <TextView
            android:text="tx_item04"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_item04"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/s12"
            android:layout_weight="1" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/x120"
            android:layout_height="match_parent"
            >

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tx_item05"
                android:textStyle="bold"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                 />

            <Button
                android:layout_width="@dimen/x18"
                android:layout_height="@dimen/x18"
                android:id="@+id/bnt_menu"
                android:background="@mipmap/menu"
                android:layout_marginRight="@dimen/x5"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                 />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
