<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="10dp"
        android:text="3:50"
        android:textSize="@dimen/s15"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:textColor="@color/text_g"
        android:layout_centerVertical="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/bg_rect_corner_write_3"
        android:orientation="vertical"
        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
      >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:id="@+id/llt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/renwu_context"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="任务内容："
                            android:textSize="@dimen/s14"
                            android:layout_marginRight="30dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/text_g"
                            android:layout_centerVertical="true"

                            />
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:textColor="@color/text_g"
                        android:textSize="@dimen/s12"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/textView4" />

                    <TextView
                        android:id="@+id/bianhao_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/text_g"
                        android:textSize="@dimen/s12"
                        android:text="-"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务来源："
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/text_g"
                        android:textSize="@dimen/s12"
                        />

                    <TextView
                        android:id="@+id/source_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_g"
                        android:layout_marginRight="30dp"
                        android:textSize="@dimen/s12"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发起部门："
                        android:textColor="@color/text_g"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/s12"
                        />

                    <TextView
                        android:id="@+id/stop_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_g"
                        android:layout_marginRight="30dp"
                        android:textSize="@dimen/s12"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布人："
                        android:singleLine="true"
                        android:textColor="@color/text_g"
                        android:layout_marginLeft="20dp"
                        android:textSize="@dimen/s12"
                        />
                    <TextView
                        android:id="@+id/fabu_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_g"
                        android:textSize="@dimen/s12"
                        android:layout_marginRight="30dp"
                        android:text="-"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/crate_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s11"
                        android:text="创建时间：-"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="17dp" />
                </RelativeLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
