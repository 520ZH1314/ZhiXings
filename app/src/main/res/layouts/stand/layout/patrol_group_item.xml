<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <TextView
            android:text="车间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name01" />

        <TextView
            android:text="第一车间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_name01"
            android:layout_toEndOf="@+id/tx_name01"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/s14"
            android:id="@+id/tx_item01" />

        <TextView
            android:text="张三"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:textSize="@dimen/s14"
            android:id="@+id/tx_item02" />

        <TextView
            android:text="组长:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tx_item02"
            android:layout_toStartOf="@+id/tx_item02"
            android:layout_marginRight="@dimen/x5"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name02" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        >

        <TextView
            android:text="组员:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name03" />

        <TextView
            android:text="XXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_name03"
            android:layout_toEndOf="@+id/tx_name03"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="@dimen/s14"
            android:id="@+id/tx_item03" />

    </RelativeLayout>

</LinearLayout>
