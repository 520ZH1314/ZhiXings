<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">
    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/renwu_head"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:background="@mipmap/shubenlogo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/renwu_item_createuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黄田巧"
                android:layout_toRightOf="@id/renwu_head"
                android:textSize="@dimen/s15"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/renwu_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-7-10"
                android:layout_toRightOf="@id/renwu_head"
                android:layout_below="@+id/renwu_item_createuser"
                android:textSize="@dimen/s12"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/text_g9"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray03"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/white">
        <TextView
            android:id="@+id/renwu_client_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:textSize="@dimen/s11"
            android:maxLength="11"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:gravity="center|bottom"
            android:layout_marginBottom="5dp"
            android:textColor="@color/text_g"
            android:text="--" />

        <TextView
            android:id="@+id/renwu_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/s12"
            android:maxLength="11"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:gravity="center|bottom"
            android:text="客户名称" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:background="@color/white">



            <TextView
                android:id="@+id/renwu_product_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_g"
                android:text="手机P-9"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="产品名称" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x25"
            android:background="@color/white">

            <TextView
                android:id="@+id/renwu_cargo_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="20"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="2017-9-1"
                android:textColor="@color/text_g"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="交货时间" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/white">
            <TextView
                android:id="@+id/renwu_cargo_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="10000"
                android:textColor="@color/text_g" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="交货数量" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray03"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/white">



            <TextView
                android:id="@+id/renwu_indent_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="cd-00001"
                android:textColor="@color/text_g" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="催单编号" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/white">



            <TextView
                android:id="@+id/renwu_dingdan_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="1233456"
                android:textColor="@color/text_g" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="订单号" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray03"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/white">
            <TextView
                android:id="@+id/renwu_zeren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="黄田巧"
                android:textColor="@color/text_g"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="责任人" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/white">
            <TextView
                android:id="@+id/renwu_chaosong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="刘格言"
                android:textColor="@color/text_g" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/s12"
                android:layout_centerVertical="true"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="抄送人" />
        </RelativeLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray03"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:orientation="horizontal"
            android:visibility="gone"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/renwu_rl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x15"
                        android:layout_height="@dimen/x15"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/jjcd_anser"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="回复"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s13"/>

                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/gray03"/>


            <RelativeLayout
                android:id="@+id/renwu_rl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="更多 ..."
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/s13"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/renwu_leader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
    </ListView>

            <ListView
                android:id="@+id/renwu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
            </ListView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
