<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/white">

        <TextView
            android:id="@+id/analysis_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="任务关闭率"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/s13"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/analysis_statistics"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="任务分类统计"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/s13"
            android:textColor="@color/gray"
        />

        <TextView
            android:id="@+id/analysis_personage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="个人任务评价"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/s13"
            android:textColor="@color/gray"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/gray03">

        <View
            android:id="@+id/view01"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/blue"></View>

        <View
            android:id="@+id/view02"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@color/blue"></View>

        <View
            android:id="@+id/view03"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:background="@color/blue"></View>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x35"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/neibu_sp2"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x34"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/s12"
                android:textColor="@color/text_g"
                android:gravity="center"
                android:hint="请选择部门"
                android:drawableRight="@mipmap/icon_down"
                />

            <TextView
                android:id="@+id/neibu_sp3"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x34"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/s12"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_g"
                android:gravity="center"
                android:hint="请选择类型"
                android:drawableRight="@mipmap/icon_down"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white"></View>
</LinearLayout>
