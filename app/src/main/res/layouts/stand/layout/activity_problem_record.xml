<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:id="@+id/lay_back"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg"
        >

        <TextView
            android:text="我的问题明细"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_center_size"
            android:id="@+id/tx_tittle" />

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerVertical="true"
            android:background="@mipmap/back"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_back"
            android:layout_alignBaseline="@+id/tx_tittle"
            android:layout_alignBottom="@+id/tx_tittle"
            android:layout_toRightOf="@+id/title_back"
            android:layout_toEndOf="@+id/title_back" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="@color/content_bg">
        <ListView
            android:id="@+id/record_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/lay01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center"
            >

            <Button
                android:id="@+id/bnt_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:padding="@dimen/x2"
                android:textSize="@dimen/title_center_size"
                android:textColor="#FF6600"
                android:layout_margin="@dimen/x8"
                android:gravity="center"
                android:background="@drawable/ss03"
                android:text="保存建议" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
