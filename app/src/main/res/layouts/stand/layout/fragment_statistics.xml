<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">

    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/lay_neibu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">

            <ImageView
                android:id="@+id/login_img"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/next_img"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/next01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/neibu_biao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/login_img"
                android:layout_toLeftOf="@+id/next_img"
                android:background="@null"
                android:textSize="@dimen/s15"
                android:maxLength="11"
                android:textColor="@color/text_g"
                android:inputType="number"
                android:gravity="center_vertical"
                android:text="内部紧急催单分析表" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray02"></View>

        <RelativeLayout
            android:id="@+id/lay_caigou"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45">

            <ImageView
                android:id="@+id/login_img01"
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/next_img01"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/next01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/caigou_biao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="@dimen/s15"
                android:maxLength="11"
                android:textColor="@color/text_g"
                android:layout_toRightOf="@+id/login_img01"
                android:layout_toLeftOf="@+id/next_img01"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:gravity="center_vertical"
                android:text="采购紧急催单表"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
