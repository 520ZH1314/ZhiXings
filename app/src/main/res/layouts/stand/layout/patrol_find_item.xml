<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="@drawable/ss"
        android:layout_margin="@dimen/x5"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl3"
            android:paddingRight="25dp"
            android:visibility="gone" >

            <com.shuben.zhixing.www.view.MyGridView
                android:id="@+id/gv_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:listSelector="@null"
                android:numColumns="3"
                android:padding="@dimen/x5"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="@dimen/x10"
                android:verticalSpacing="@dimen/x2"
                 >
            </com.shuben.zhixing.www.view.MyGridView>
        </RelativeLayout>
        <TextView
        android:text="问题描述:"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/s12"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x10"
        android:id="@+id/tx_name01" />
        <TextView
        android:text="TextView"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:background="@color/gray03"
        android:layout_margin="@dimen/x5"
        android:id="@+id/tx_item01" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="发现人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name02" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tx_name02"
            android:layout_toEndOf="@+id/tx_name02"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item02" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item03" />

        <TextView
            android:text="部门:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item03"
            android:layout_toStartOf="@+id/tx_item03"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name03" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60">

        <TextView
            android:text="严重程度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name04" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/s12"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/tx_item05" />

        <TextView
            android:text="责任人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tx_item05"
            android:layout_toStartOf="@+id/tx_item05"
            android:layout_centerVertical="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:id="@+id/tx_name05" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_item04"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:isIndicator="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_name04"
            android:layout_toEndOf="@+id/tx_name04" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">

        <TextView
            android:text="问题责令完成时间:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/s12"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tx_name06" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tx_name06"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="@dimen/s12"
            android:id="@+id/tx_item06" />


    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lay01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:visibility="visible"
            >


            <Button
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/thumb_selector"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginEnd="@dimen/x10"
                android:id="@+id/bnt_thumb" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/bnt_thumb"
                android:layout_toStartOf="@+id/bnt_thumb"
                android:layout_marginRight="@dimen/x10"
                android:textSize="@dimen/s12"
                android:gravity="center"
                android:layout_marginEnd="@dimen/x10"
                android:textColor="@color/yellow"
                android:id="@+id/tx_item07" />

            <TextView
                android:text="获赞数量:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tx_item07"
                android:layout_toStartOf="@+id/tx_item07"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginEnd="@dimen/x10"
                android:gravity="center"
                android:textSize="@dimen/s12"
                android:textStyle="bold"
                android:id="@+id/tx_name07" />
        </RelativeLayout>
</LinearLayout>
</LinearLayout>