<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray03"
    android:orientation="vertical" >

    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32">
            <ImageView
                android:id="@+id/next_img"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/next01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/fm_four_set"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:gravity="center_vertical"
                android:hint="基础设置" />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray02"></View>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/x32">

            <ImageView
                android:id="@+id/next_img01"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/next01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/updata_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/next_img01"
                android:background="@null"
                android:textSize="@dimen/s11"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="修改密码" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>