<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/gray03"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x35"
                    android:background="#f8f8f8">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@mipmap/sy_gxmeeting"/>

                    <TextView
                        android:id="@+id/renwu_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/img"
                        android:text="任务来源："
                        android:gravity="center_vertical"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/text_g9"
                        android:layout_centerVertical="true"
                        />



                    <TextView
                        android:id="@+id/crate_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true"
                        android:text="2017-5-3"
                        android:textColor="@color/text_g9"
                        android:textSize="@dimen/s10"
                        />

                    <TextView
                        android:id="@+id/renwu_context"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toLeftOf="@+id/crate_time_tv"
                        android:layout_toRightOf="@id/renwu_name_tv"
                        android:layout_centerVertical="true"
                        android:text="我从哪里来"
                        android:singleLine="true"
                        android:textColor="@color/text_g9"
                        android:textSize="@dimen/s10"
                        />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编号："
                        android:layout_marginTop="@dimen/x10"
                        android:textSize="@dimen/s12"
                        android:layout_marginLeft="@dimen/x25"
                        android:textColor="@color/text_g"
                        />

                    <TextView
                        android:id="@+id/bianhao_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s12"
                        android:layout_marginTop="@dimen/x10"
                        android:textColor="@color/text_g"
                        android:text="-"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务来源："
                        android:textSize="@dimen/s12"
                        android:layout_marginLeft="@dimen/x25"
                        android:textColor="@color/text_g"
                        />

                    <TextView
                        android:id="@+id/source_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/text_g"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发起部门："
                        android:textSize="@dimen/s12"
                        android:layout_marginLeft="@dimen/x25"
                        android:textColor="@color/text_g"
                        />

                    <TextView
                        android:id="@+id/stop_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/text_g"
                        android:text="-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布人："
                        android:singleLine="true"
                        android:textSize="@dimen/s12"
                        android:layout_marginBottom="@dimen/x10"
                        android:layout_marginLeft="@dimen/x25"
                        android:textColor="@color/text_g"
                        />
                    <TextView
                        android:id="@+id/fabu_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s12"
                        android:layout_marginBottom="@dimen/x10"
                        android:textColor="@color/text_g"
                        android:text="-"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
