<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray03"
    android:orientation="vertical" >

    <include
        android:id="@+id/l_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/fm_four_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">

            <TextView
                android:id="@+id/me_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/s9"
                android:maxLength="11"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:hint="130..." />

            <TextView
                android:id="@+id/me_version"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/me_num"
                android:textSize="@dimen/s10"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="绑定手机号" />

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray02"></View>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/x35">

            <ImageView
                android:id="@+id/next_img01"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/next01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/updata_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/next_img01"
                android:background="@null"
                android:textSize="@dimen/s9"
                android:maxLength="11"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:hint="修改密码" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>