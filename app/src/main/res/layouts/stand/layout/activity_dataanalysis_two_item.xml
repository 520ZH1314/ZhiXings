<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray03"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/analysis_item_ranking"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/x15"
                android:textSize="@dimen/s10"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_g"
                android:text=""/>

            <TextView
                android:id="@+id/analysis_item_ranking2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s10"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/text_g"
                android:text=""/>
        </RelativeLayout>

        <TextView
            android:id="@+id/analysis_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_g"
            android:text="--"/>

        <TextView
            android:id="@+id/analysis_item_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_g"
            android:text="--"/>

        <TextView
            android:id="@+id/analysis_item_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/s10"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="--"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
