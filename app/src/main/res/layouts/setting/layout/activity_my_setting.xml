<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MySettingActivity">
   <include layout="@layout/titles_layout"/>
  <ScrollView
      android:scrollbars="none"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x10"/>
          <!--个人资料-->
          <RelativeLayout
              android:id="@+id/rl_my_info"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="个人资料"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x1"/>
          <!--外部名片-->
          <RelativeLayout
              android:id="@+id/rl_business_card"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="外部名片"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x10"/>
          <!--账号安全-->
          <RelativeLayout
              android:id="@+id/rl_account_security"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="账号安全"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x10"/>
          <!--新消息通知-->
          <RelativeLayout
              android:id="@+id/rl_new_message"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="新消息通知"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x1"/>
          <!--隐私-->
          <RelativeLayout
              android:id="@+id/rl_privacy"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="隐私"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>
          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x1"/>
          <!--常规-->
          <RelativeLayout
              android:id="@+id/rl_routine"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="常规"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>


          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x10"/>
          <!--企业设置-->
          <RelativeLayout
              android:id="@+id/rl_company"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="企业设置"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>


          <View
              android:background="@color/content_line"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x10"/>
          <!--关于数本科技-->
          <RelativeLayout
              android:id="@+id/rl_about"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:padding="@dimen/x15">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginLeft="15dp"
                  android:layout_toRightOf="@+id/xuexi_tip"
                  android:text="关于数本科技"
                  android:textColor="@color/txt_viw"
                  android:textSize="@dimen/content_txt_" />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:background="@mipmap/next01" />
          </RelativeLayout>



          <Button
              android:padding="@dimen/x10"
              android:textSize="@dimen/s18"
              android:gravity="center"
              android:layout_marginRight="@dimen/x15"
              android:layout_marginLeft="@dimen/x15"
              android:layout_marginTop="@dimen/x20"
              android:textColor="@color/white"
              android:id="@+id/btn_un_login"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x50"
              android:text="退出登录" />

      </LinearLayout>





  </ScrollView>




</LinearLayout>