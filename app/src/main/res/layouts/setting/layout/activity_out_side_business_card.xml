<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OutSideBusinessCardActivity">
    <include layout="@layout/titles_layout"/>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--头像 姓名-->
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.base.zhixing.www.widget.CircularImage
                    android:id="@+id/iv_my_info_businesscard_head"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="3dp"
                    android:text="李三"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_txt_"
                    app:layout_constraintStart_toEndOf="@+id/iv_my_info_businesscard_head"
                    app:layout_constraintTop_toTopOf="@+id/iv_my_info_businesscard_head" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="组长"
                    android:textSize="@dimen/list_txt_s"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_my_info_businesscard_head"
                    app:layout_constraintStart_toStartOf="@+id/tv_my_info_businesscard_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_my_info_businesscard_name" />
            </android.support.constraint.ConstraintLayout>

            <!--部门-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/content_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="部门"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_txt_" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_depart_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="技术中心"
                    android:textSize="@dimen/list_txt_" />

            </LinearLayout>


            <!--手机-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/content_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="手机"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_txt_" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="15000000001"
                    android:textSize="@dimen/list_txt_" />

            </LinearLayout>

            <!--邮箱-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/content_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="邮箱"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_txt_" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="135@163.com"
                    android:textSize="@dimen/list_txt_" />

            </LinearLayout>


            <!--工作介绍-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x10"
                android:background="@color/content_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:padding="@dimen/x15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="工作介绍"
                    android:textColor="@color/black"
                    android:textSize="@dimen/content_txt_" />

                <TextView
                    android:id="@+id/tv_my_info_businesscard_job_ind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x15"
                    android:text="未设置"
                    android:textSize="@dimen/list_txt_" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>