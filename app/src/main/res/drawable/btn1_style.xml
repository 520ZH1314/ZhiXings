<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
  <shape>
      <gradient android:startColor="#ff6600" android:endColor="#ffbb00" android:angle="90"/>
      <stroke android:width="1dip" android:color="#ffbb00"/>
      <corners android:radius="40dp" android:topLeftRadius="40dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="10dp"/>
  </shape>
  </item>
  
   <item android:state_focused="true">
  <shape>
      <gradient android:startColor="#ff6600" android:endColor="#ffbb00" android:angle="90"/>
      <stroke android:width="2dip" android:color="#ffbb00"/>
      <corners android:radius="40dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp"
               android:bottom="5dp"/>
  </shape>
  </item>
  
  <item>
  <shape>
      <gradient android:startColor="#ffbb00" android:endColor="#ff6600" android:angle="90"/>
      <stroke android:width="1dip" android:color="#ffbb00"/>
      <corners android:radius="40dp"/>
      <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/>
  </shape>
  </item>
</selector>
