<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:layout_margin="@dimen/x5"
        app:cardMaxElevation="3dp"
        android:padding="@dimen/x8"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/x6"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/it0"
                    android:layout_width="wrap_content"
                    android:src="@mipmap/xscltime"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/it00"
                    android:layout_toRightOf="@+id/it0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_centerVertical="true"
                    android:text="12:00-13:00"
                    android:textColor="@color/txt_viw"
                    android:textSize="@dimen/list_txt_" />
                <TextView
                    android:id="@+id/it1"
                    android:layout_width="wrap_content"
                    android:textColor="@color/txt_nor"
                    android:textSize="@dimen/list_txt_"
                    android:layout_alignParentRight="true"
                    android:text="型号:545152959261646"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x3"
                android:layout_marginBottom="@dimen/x3"
                android:background="@color/content_line"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/x5"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/list_txt_"
                            android:textColor="@color/txt_nor"
                            android:text="计划产能"
                            android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/it2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x5"
                        android:text="45"
                        android:textColor="@color/txt_viw"
                        android:textSize="@dimen/content_txt_" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/list_txt_"
                        android:textColor="@color/txt_nor"
                        android:text="实际产能"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/it3"
                        android:layout_width="wrap_content"
                        android:text="45"
                        android:textColor="@color/txt_viw"
                        android:layout_marginTop="@dimen/x5"
                        android:textSize="@dimen/content_txt_"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/x5"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/list_txt_"
                        android:textColor="@color/txt_nor"
                        android:text="不良数"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/it4"
                        android:layout_width="wrap_content"
                        android:text="45"
                        android:textColor="@color/txt_viw"
                        android:layout_marginTop="@dimen/x5"
                        android:textSize="@dimen/content_txt_"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/list_txt_"
                    android:textColor="@color/txt_nor"
                    android:text="不良原因"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/it5"
                    android:layout_width="wrap_content"
                    android:text="45"
                    android:textColor="@color/txt_viw"
                    android:layout_marginTop="@dimen/x5"
                    android:textSize="@dimen/content_txt_"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x5"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/list_txt_"
                    android:textColor="@color/txt_nor"
                    android:text="备注"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/it6"
                    android:layout_width="wrap_content"
                    android:text="45"
                    android:textColor="@color/txt_viw"
                    android:layout_marginTop="@dimen/x5"
                    android:textSize="@dimen/content_txt_"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/reson_btn"
                android:layout_width="wrap_content"
                android:ems="6"
                android:text="原因录入"
                android:gravity="center"
                android:padding="@dimen/x6"
                android:textSize="@dimen/content_txt_s"
                android:layout_marginTop="@dimen/x3"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>