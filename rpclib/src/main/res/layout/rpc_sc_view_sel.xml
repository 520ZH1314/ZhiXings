<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/l_title"
        layout="@layout/title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/x15"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:hint="请选择"
            android:textColorHint="@color/txt_bor"
            android:layout_marginBottom="@dimen/x5"
            android:textSize="@dimen/content_txt_"
            android:textColor="@color/txt_viw"
            android:layout_height="wrap_content" />
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shape_sel_bg"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/x10"
                android:hint="请选择工单"
                android:textColorHint="@color/txt_bor"
                android:textSize="@dimen/s16"
                android:layout_height="wrap_content" />
            <ImageView

                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/next01"
                />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="UPH值"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:textSize="@dimen/content_txt_"
            android:textColor="@color/txt_viw"
            android:layout_height="wrap_content" />
        <LinearLayout

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_sel_bg"
            android:layout_height="wrap_content">
            <com.base.zhixing.www.widget.XEditText
                android:id="@+id/item1"
                android:layout_width="match_parent"
                android:padding="@dimen/x10"
                android:singleLine="true"
                android:background="@color/no_color"
                android:hint="请输入"
                android:numeric="integer"
                android:textSize="@dimen/s16"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="单次计数"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:textSize="@dimen/content_txt_"
            android:textColor="@color/txt_viw"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:background="@drawable/shape_sel_bg"
            android:layout_height="wrap_content">
            <com.base.zhixing.www.widget.XEditText
                android:id="@+id/item2"
                android:layout_width="match_parent"
                android:padding="@dimen/x10"
                android:singleLine="true"
                android:background="@color/no_color"
                android:hint="请输入"
                android:numeric="integer"
                android:textSize="@dimen/s16"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>